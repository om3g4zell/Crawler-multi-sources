<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %highlight{%-5level [%logger{36}] - %C{1}.%method:%L} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="fr.babuchon.crawler" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
        </Root>
    </Loggers>
</Configuration>